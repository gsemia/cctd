% define this command to be used the configuration of the man document
\newcommand{\setPDFinfo}
{
	\pdfinfo{
		/Author (\PrintmyAuthor)
		/Title (\PrintmyTitle)
		/CreationDate (D:\pdfdate)
		/ModDate (D:\pdfdate)
		/Subject (\PrintmySubTitle)
		/Keywords (\PrintmyDoctype, \PrintmyDivision, \PrintmyCompany)
	}
}

% Tracktool page Pagestyle (fancy headers) 
\fancypagestyle{tracktool}{
	\fancyhf{} % clear all header and footer fields

	\renewcommand{\headrulewidth}{0.2pt}
	\fancyhead[L]{\PrintmyTitle}
	\fancyhead[R]{\headerlogo}

	\renewcommand{\footrulewidth}{0.2pt}
	\fancyfoot[L]{Version \PrintmyVersion \hspace{1pt} / \@date} %{Document \PrintmyDocnum}
	\fancyfoot[C]{\sc{\textcolor{red}\PrintmyConfidential  \hspace{5mm} \textcolor{red}\PrintmyDraft}}
	\fancyfoot[R]{\thepage}
}

% set fancy headers page style
\pagestyle{tracktool}

